<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/login_pager"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/login_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <com.google.android.material.tabs.TabItem
            android:text="@string/login"/>
        <com.google.android.material.tabs.TabItem
            android:text="@string/register"/>
    </com.google.android.material.tabs.TabLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An almost completely unimplemented login activity. Replace this with your own and update the code in LoginService."
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_above="@id/LoginButton"/>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push this Button to Login with a Hard-Coded User"
        android:layout_centerInParent="true"/>
</RelativeLayout>